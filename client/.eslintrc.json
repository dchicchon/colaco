{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "ignorePatterns": "**/build/*",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/prop-types": "off",
        // "import/named": "off",
        "linebreak-style": "off",
        "indent": "off",
        "react/jsx-closing-tag-location": "off",
        "react/no-array-index-key": "off",
        "import/prefer-default-export": "off"
    }
}